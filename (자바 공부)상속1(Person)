
public class Person {

	private String name;
	private int age;
	private int height;
	private int weight;
	public String getName() {
		return name;
	}
	
	// Source (Alt + Shift + S) → Generate Getters and Setters : 각 인스턴스가 가지는 함수들 자동으로 생성
	public void setName(String name) {
		this.name = name;
	}
	public int getAge() {
		return age;
	}
	public void setAge(int age) {
		this.age = age;
	}
	public int getHeight() {
		return height;
	}
	public void setHeight(int height) {
		this.height = height;
	}
	public int getWeight() {
		return weight;
	}
	public void setWeight(int weight) {
		this.weight = weight;
	}
	
	// Source (Alt + Shift + S) → Externalize Strings
	public Person(String name, int age, int height, int weight) {
		super();
		this.name = name;
		this.age = age;
		this.height = height;
		this.weight = weight;
	}
	
	
}
